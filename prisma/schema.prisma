generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  admin
  super_admin
}

enum DeviceStatus {
  available
  rented
  maintenance
  broken
}

enum RentalStatus {
  pending
  approved
  rejected
  completed
  cancelled
}

enum IssueStatus {
  pending
  in_progress
  resolved
}

enum MaintenanceType {
  regular_check
  repair
  part_replacement
}

enum RentalDuration {
  day
  week
  month
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String    @unique
  emailVerified DateTime?
  password      String
  role          Role      @default(user)
  identityDoc   String? // CCCD hoặc giấy tờ tùy thân

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

// Device: Đại diện cho từng thiết bị cho thuê.
model Device {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  image        String
  description  String
  dailyPrice   Float // Giá thuê theo ngày
  weeklyPrice  Float // Giá thuê theo tuần
  monthlyPrice Float // Giá thuê theo tháng
  depositRate  Float // Tiền cọc (% giá trị gốc VD 0.2 là 20%)
  value        Float // Giá trị gốc của thiết bị
  status       DeviceStatus

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("devices")
}

// Discount: Quản lý mã giảm giá với thời gian hiệu lực và giới hạn số lượng.
model Discount {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  code      String   @unique
  value     Float // Giá trị giảm giá
  validFrom DateTime // Thời gian bắt đầu
  validTo   DateTime // Thời gian kết thúc
  limit     Int? // Giới hạn số lượng mã

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("discounts")
}
