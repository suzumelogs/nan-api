generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  admin
  super_admin
}

enum DeviceStatus {
  available
  rented
  maintenance
  broken
}

enum RentalStatus {
  pending
  approved
  rejected
  completed
  cancelled
}

enum IssueStatus {
  pending
  in_progress
  resolved
}

enum MaintenanceType {
  regular_check
  repair
  part_replacement
}

enum RentalDuration {
  day
  week
  month
}

// Người dùng
model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String    @unique
  emailVerified DateTime?
  password      String
  role          Role      @default(user)
  identityDoc   String? // CCCD hoặc giấy tờ tùy thân

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

// Thiết bị
model Device {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  image       String
  price       Float // Giá trị gốc của thiết bị
  description String
  status      DeviceStatus

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  Category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?   @db.ObjectId

  @@map("devices")
}

// Danh mục 
model Category {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique // Loa, Đài, Quạt, Điều hòa, Máy chiếu, v.v.

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  devices Device[]

  @@map("categories")
}

// Mã giảm giá
model Discount {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  code               String   @unique
  discountPercentage Float // Phần trăm giảm giá
  startTime          DateTime // Thời gian bắt đầu
  endTime            DateTime // Thời gian kết thúc
  maxUses            Int // Số lần sử dụng tối đa

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("discounts")
}
